@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 mt-5">
        <!-- Left side: Login and Registration -->
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Register">Register</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-5   ">
        <div class="card login-logout-card">
            <div class="card-header">
                <h5 class="mb-0">General Services Provided By Natural By Design</h5>
            </div>
            <div class="card-body">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                Question 1: What is Natural by Design?
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Answer 1: Natural by Design is a project aimed at promoting sustainable living and eco-friendly practices.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Question 2: What are the general services offered by Natural By Design?
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Answer 2: You can get involved by participating in our events, volunteering, or contributing to our initiatives.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Question 3: Can you provide an overview of the services available at Natural By Design?
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Answer 3: Certainly! Natural By Design offers landscaping services, eco-friendly construction, renewable energy solutions such as solar panel installation, and environmental consulting to help individuals and businesses adopt sustainable practices.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Question 4: How does Natural By Design contribute to sustainable living?
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Answer 4: Natural By Design contributes to sustainable living by providing services that promote eco-friendly practices, such as landscaping with native plants, constructing energy-efficient buildings, and implementing renewable energy solutions.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFive">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                Question 5: What specific eco-friendly practices does Natural By Design promote?
                            </button>
                        </h2>
                        <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Answer 5: Natural By Design promotes eco-friendly practices such as using sustainable materials in construction, minimizing energy consumption through efficient design, and reducing water usage through smart landscaping techniques.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $('#login-tab').on('click', function (e) {
            $('#login-tab').addClass('active');
            $('#register-tab').removeClass('active');
            $('#login-content').addClass('show active');
            $('#register-content').removeClass('show active');
        });

        $('#register-tab').on('click', function (e) {
            $('#register-tab').addClass('active');
            $('#login-tab').removeClass('active');
            $('#register-content').addClass('show active');
            $('#login-content').removeClass('show active');
        });
    </script>
}