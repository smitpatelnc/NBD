@model NBD3.Models.Bid

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bid</h4>
<hr />
<div class="row">
	<div class="col-md-3">
		<form asp-action="Create">
			<div class="form-group">
				<label asp-for="BidDate" class="control-label"></label>
				<input asp-for="BidDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="BidDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectID" class="control-label"></label>
				<select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
			</div>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="BidAmount" class="control-label">Bid Amount</label>
				<input asp-for="BidAmount" class="form-control" placeholder="Enter bid amount" />
				<span asp-validation-for="BidAmount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				&nbsp;
				<a asp-action="Index" class="btn btn-outline-secondary">Back to Client List</a>
			</div>
		</form>
	</div>
</div>



