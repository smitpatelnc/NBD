@model NBD3.Models.Inventory

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryID" />
            <div class="form-group">
                <label asp-for="InventoryCode" class="control-label"></label>
                <input asp-for="InventoryCode" class="form-control" />
                <span asp-validation-for="InventoryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryDescription" class="control-label"></label>
                <input asp-for="InventoryDescription" class="form-control" />
                <span asp-validation-for="InventoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryQuantity" class="control-label"></label>
                <input asp-for="InventoryQuantity" class="form-control" />
                <span asp-validation-for="InventoryQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryUnitType" class="control-label"></label>
                <input asp-for="InventoryUnitType" class="form-control" />
                <span asp-validation-for="InventoryUnitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InventoryPriceList" class="control-label"></label>
                <input asp-for="InventoryPriceList" class="form-control" />
                <span asp-validation-for="InventoryPriceList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaterialCategoryID" class="control-label"></label>
                <select asp-for="MaterialCategoryID" class="form-control" asp-items="ViewBag.MaterialCategoryID"></select>
                <span asp-validation-for="MaterialCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>



