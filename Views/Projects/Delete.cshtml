@model NBD3.Models.Project

@{
    ViewData["Title"] = "Delete:" +" " + Model.ProjectName;
}
<div class="container mt-3">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="card shadow">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <div class="mb-4">
                        <h5 class="card-title text-muted">Project Information</h5>
                        <hr class="mb-4">
                        <dl class="row">
                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@Model.ProjectDescription</dd>
                            <dt class="col-sm-4">Start Date:</dt>
                            <dd class="col-sm-8">@Model.ProjectStartDate</dd>
                            <dt class="col-sm-4">End Date:</dt>
                            <dd class="col-sm-8">@Model.ProjectEndDate</dd>
                            <dt class="col-sm-4">Client:</dt>
                            <dd class="col-sm-8">@Model.Client.ContactFullName</dd>
                            <dt class="col-sm-4">Project Location:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Location != null)
                                {
                                    @Model.Location.LocationFullAddress
                                }
                                else
                                {
                                    <span class="text-danger">No location specified</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col">
                    <p class="lead mb-4">Are you sure you want to delete this project?</p>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProjectId" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





