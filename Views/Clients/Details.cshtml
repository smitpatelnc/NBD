@model NBD3.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<div class="container mt-5 mb-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Company Name:</dt>
                        <dd class="col-sm-8">@Model.ClientCommpanyName</dd>

                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Model.ClientFirstName</dd>

                        <dt class="col-sm-4">Middle Name:</dt>
                        <dd class="col-sm-8">@Model.ClientMiddleName</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Model.ClientLastName</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.ClientPhone</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.ClientEmail</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.ClientStreetAddress</dd>

                        <dt class="col-sm-4">City:</dt>
                        <dd class="col-sm-8">@Model.ClientCityAddress</dd>

                        <dt class="col-sm-4">Country:</dt>
                        <dd class="col-sm-8">@Model.ClientCountryAddress</dd>

                        <dt class="col-sm-4">Postal Code:</dt>
                        <dd class="col-sm-8">@Model.ClientPostalCode</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.ClientId">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to Client List</a>
    </div>
</div>
