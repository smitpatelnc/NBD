@{
    if (ViewData.ContainsKey("ControllerName"))
    {
        if (ViewData.ContainsKey("returnURL"))
        {
            <a href='@ViewData["returnURL"]' class="btn btn-outline-secondary">Back to the @ViewData["ControllerFriendlyName"] List</a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Back to the @ViewData["ControllerFriendlyName"] List</a>
        }
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary">Back to the List</a>
    }

}
